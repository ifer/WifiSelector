                <!--<action android:name="android.intent.action.ACTION_SCREEN_ON" />-->
            <!--</intent-filter>-->
        <!--</receiver>-->

        <service android:name=".WifiJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" ></service>

    </application>

</manifest>